@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Message.Id" />
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.CreatedAt" class="control-label"></label>
                <input asp-for="Message.CreatedAt" class="form-control" />
                <span asp-validation-for="Message.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.User.UserName" class="control-label"></label>
                <label class="form-control">
                    @Html.DisplayFor(model => model.Message.User.UserName)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
